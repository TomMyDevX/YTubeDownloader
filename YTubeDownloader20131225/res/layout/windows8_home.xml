<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Home" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
    
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:scrollbars="none"
            
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/youtube_x"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                   
                    android:gravity="left|center_vertical"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/windows_8_youtube"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"

                        android:layout_margin="2dp"
                        android:layout_weight="1"
                      
                        android:scaleType="fitStart"
                        android:src="@drawable/windows_8_youtube" />
                </LinearLayout>

                <LinearLayout
 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/windows_8_people"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                     
                        android:layout_weight="0.75"
                        android:background="#04aeda"
                        android:visibility="gone"
                        android:src="@drawable/windows_8_people" />

                    <LinearLayout
                        android:id="@+id/windows_8_layout_setting"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:layout_height="match_parent" >

                        <ImageView
                            android:id="@+id/windows8_setting"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
     						
                            android:scaleType="fitStart"
                            android:src="@drawable/windows_8_setting" />

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            android:text="   Setting   "
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/webview_x"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/windows_8_webview_dect"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:src="@drawable/windows8_webview" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="   Browser   "
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <ImageView
                        android:id="@+id/windows_8_twitter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
            
                        android:background="#19bfe5"
                        android:padding="15dp"
                        android:visibility="gone"
                        android:scaleType="fitEnd"
                        android:src="@drawable/windows_8_twitter" />

                    <LinearLayout
                         android:id="@+id/windows_8_layout_bookmark"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
  
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/windows_8_bookmark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            
                            android:layout_weight="1"
                            android:adjustViewBounds="true"
                            android:src="@drawable/windows_8_bookmark" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Bookmark"
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
  
                    android:orientation="horizontal"
                   android:id="@+id/windows_8_layout_download"
                    android:layout_height="180dp" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="   Download   "
                            android:textAppearance="?android:attr/textAppearanceLarge" />

                        <ImageView
                            android:id="@+id/windows_8_download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                      
                            android:scaleType="fitStart"
                            android:src="@drawable/windows_8_download" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" >

                            <TextView
                                android:id="@+id/windows_8_download_total"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 Files"
                                android:textAppearance="?android:attr/textAppearanceLarge" />

                        </LinearLayout>

                        <ListView
                            android:id="@+id/windows_8_download_list"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="none" >

                        </ListView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>
