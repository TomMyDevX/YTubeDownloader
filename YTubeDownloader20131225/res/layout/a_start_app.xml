<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SlidingPaneLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sliding_pane_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    
    <LinearLayout 
        android:id="@+id/left_pane"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       	android:orientation="vertical"
       	android:background="#d0d0d0"
        >
        <com.inmobi.monetization.IMBanner
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        adSize="15" appId="f7278216aa3b4cc394ad820f3b211e49"
      
        >
    </com.inmobi.monetization.IMBanner>
        <android.support.v4.view.ViewPager
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                       
                        android:id="@+id/viewpager"
                        android:layout_weight="1"
                
                      />
         <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/titles"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                   />
        
        
    </LinearLayout>
  

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ededed"
       >
        
   <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="left|top"
               
               >     
        
	<LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                 android:background="#ff333333" 
                android:gravity="left|top"
                android:padding="5dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/btn_src"
                    android:layout_width="@dimen/right_size_w"
                    android:layout_height="@dimen/right_size_h"
                    android:src="@drawable/action_search" />

                <ImageView
                    android:id="@+id/btn_setting"
                    android:layout_width="@dimen/right_size_w"
                    android:layout_height="@dimen/right_size_h"
                    android:src="@drawable/generic_settings" />

                <ImageView
                    android:id="@+id/btn_download"
                    android:layout_width="@dimen/right_size_w"
                    android:layout_height="@dimen/right_size_h"
                    android:src="@drawable/download" />

             
         
                
              
            </LinearLayout>

	<FrameLayout
	    android:id="@+id/frview_a"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"

	    />
	
       
        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.SlidingPaneLayout>